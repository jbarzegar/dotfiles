// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
[
  // Editor (vim: normal)
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // quick find
      "space space": "file_finder::Toggle",
      // quick command palette
      "space p": "command_palette::Toggle",
      // -- quick commands end
      // "w" (window)
      // create split
      "space w K": "pane::SplitUp",
      "space w J": "pane::SplitDown",
      "space w H": "pane::SplitLeft",
      "space w L": "pane::SplitRight",
      // delete split
      "space w D": "pane::CloseAllItems",
      // navigate splits
      "space w k": "workspace::ActivatePaneUp",
      "space w j": "workspace::ActivatePaneDown",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
      // terminal
      "space w t": "terminal_panel::ToggleFocus",
      // -- end "w" (window)
      //
      // "f" (file)
      "space f s": "workspace::Save",
      "space f S": "workspace::SaveWithoutFormat",
      "space f t": "project_panel::ToggleFocus",
      "space f o": "outline::Toggle",
      "space f e": "project_panel::ToggleFocus",
      // -- end "f" (file)
      //
      // "t" tabs
      "space t e": "tab_switcher::Toggle",
      "space t l": "pane::ActivateNextItem",
      "space t h": "pane::ActivatePreviousItem",
      "space t d": "pane::CloseActiveItem",
      "space t $": "pane::ActivateLastItem",
      "space t 0": [
        "pane::ActivateItem",
        0
      ],
      // -- end "t" (tab)
      //
    }
  },
  // Editor (vim: visual)
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      // (shift + s)
      "S": "vim::PushAddSurrounds"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-k h": "workspace::ActivatePaneLeft",
      "ctrl-k l": "workspace::ActivatePaneRight",
      "ctrl-k H": "pane::SplitLeft",
      "ctrl-k L": "pane::SplitRight",
      "ctrl-k d": "pane::CloseAllItems",
      "ctrl-k escape": "terminal_panel::ToggleFocus"
    }
  }
]
